<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="vpiIconPageIndicatorStyle">@style/Widget.IconPageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>

        <item name="actionBarStyle">@style/CustomActionBarTheme</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <!-- ActionBar styles -->
    <style name="CustomActionBarTheme" parent="@style/Widget.AppCompat.ActionBar">
        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/CustomActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="CustomActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AppTheme.progressbar.light" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_success</item>
    </style>

    <style name="AppTheme.actionbutton.inverse" parent="android:TextAppearance.Large.Inverse">
        <item name="android:textColor">@color/cloud</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.actionbutton.inverse.normal" parent="android:TextAppearance.Large.Inverse">
        <item name="android:textColor">@color/cloud</item>
    </style>

    <style name="AppTheme.actionbutton.medium.inverse.normal" parent="android:TextAppearance.Medium.Inverse">
        <item name="android:textColor">@color/cloud</item>
    </style>

    <style name="AppTheme.EmptyView.messageStyle" parent="android:TextAppearance.Large">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/Asbestos</item>
    </style>

    <style name="AppTheme.achievement_seperator">
        <item name="android:padding">5dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.achievement.stats.countStyle" parent="android:TextAppearance.DeviceDefault.Large">
        <item name="android:textColor">@color/Asbestos</item>
        <item name="android:textSize">35sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.achievement.stats.textStyle" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/Asbestos</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.countLayoutStyle">
        <item name="android:padding">5dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

</resources>
