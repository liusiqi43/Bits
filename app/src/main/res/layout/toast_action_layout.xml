    android:layout_height="fill_parent"
    android:gravity="center"
    >

    <TextView android:id="@+id/text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/AppTheme.toast.textStyle"
        />
</LinearLayout>