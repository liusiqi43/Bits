<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bitlist_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="bitslist_fragment"
    tools:context="com.siqi.bits.app.MainActivity$PlaceholderFragment">

    <TextSwitcher
        android:id="@+id/bitslist_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Turquoise"
        android:gravity="center"
        android:padding="7dp" />

    <com.siqi.bits.swipelistview.SwipeListView xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bitslist"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/base_fragment_bg"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:listSelector="@android:color/transparent"
        android:longClickable="true"
        android:padding="5dp"
        android:persistentDrawingCache="all"
        swipe:swipeActionLeft="choice"
        swipe:swipeActionRight="choice"
        swipe:swipeBackView="@+id/back"
        swipe:swipeFrontView="@+id/front"
        swipe:swipeMode="both"
        swipe:swipeOffsetLeft="30dp"
        swipe:swipeOffsetRight="30dp"
        swipe:swipeOpenOnLongPress="false" />

</LinearLayout>
