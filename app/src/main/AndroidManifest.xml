<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.siqi.bits.app"
    android:installLocation="internalOnly">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true">
        <activity
            android:name="com.siqi.bits.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="service.ReminderServiceStartReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver android:name="service.ActionOnTaskReceiver">
            <intent-filter>
                <action android:name="com.siqi.bits.intent.action.DONE_ACTION"/>
                <action android:name="com.siqi.bits.intent.action.SKIP_ACTION"/>
            </intent-filter>
        </receiver>

        <receiver android:process=":remote" android:name="service.ReminderPublishReceiver"/>

        <service android:enabled="true" android:name="service.ReminderScheduleService" />
    </application>

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
</manifest>
